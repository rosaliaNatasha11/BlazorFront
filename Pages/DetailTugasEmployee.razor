@page "/detailtugasemployee/{id}"

@if(Employee == null || Employee.Department==null){
    <div class="spinner"></div>
}
else{
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <h1 align="center">@Employee.FirstName @Employee.LastName</h1>  
        <div class="card-body text-center">
            <img class="card-img-top" style="width:300px;height:250px" 
            src="Foto/foto.jpg" @onmousemove="@Mouse_Move" />
            <h4>@Coordinates</h4>
            <h4>Employee ID: @Employee.EmployeeId</h4>
            <h4>Email: @Employee.Email</h4>
            <h4>Department Name: @Employee.Department.DepartmentName</h4>
        </div>
        <button class="btn btn-primary" @onclick="@Button_Click">@ButtonText</button>
        <div class="card-footer text-center  @CssClass">
            <a href="/" class="btn btn-primary">Back</a>
            <a href="#" class="btn btn-secondary">Edit</a>
            <a href="#" class="btn btn-danger">Delete</a>
                </div>
        </div>
    </div>

}