@page "/employeetugaspage"

@if(Employees == null){
    <div class="spinner"></div>
}
else
{
    <div class="card-deck">
        @foreach (var emp in Employees)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30%;">
                <div class="card-header">
                    <h3>@emp.FirstName @emp.LastName</h3>
                </div>
                <img class="card-img-top img-thumbnail" src="Foto/foto.jpg" />
                <div class="card-footer text-center">
                    <a href="@($"detailtugasemployee/{emp.EmployeeId}")" class="btn btn-primary m-1">View</a>
                    <a href="@($"EditEmployee/{emp.EmployeeId}")" class="btn btn-secondary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                    
                </div>
            </div>
        }
    </div>
}